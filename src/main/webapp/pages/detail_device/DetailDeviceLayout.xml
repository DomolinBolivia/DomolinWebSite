<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout    
    width="match_parent"
    height="match_parent"
    orientation="vertical"> 
    <ImageButton
        width="70px"
        height="50px"
        src="pages/detail_device/img/ic_back.png"       
        marginTop="25px"
        onClick="onClickFinish"
        layoutGravity="right"/>   
    <ScrollView 
        width="match_parent"
        height="match_parent"
        weight="1.0">            
        <FlowLayout
            width="match_parent"  
            alignment="left">        
            <LinearLayout        
                orientation="vertical"                        
                maxWidth="500px"            
                width="match_parent">    
                <LinearLayout                          
                    orientation="horizontal"               
                    width="match_parent"
                    marginLeft="35px">   
                    <ImageView
                        id="deviceimg"                                      
                        width="90px"
                        height="70px"/>   
                    <TextView
                        id="descIcon"                                                          
                        background="pages/detail_device/img/bg_title.9.png"
                        singleLine="true"
                        marginLeft="20px"/>             
                </LinearLayout>  
                <ImageView
                    id="imgIcon"
                    layoutGravity="left"
                    marginTop="30px"
                    width="550px"
                    height="400px"                        
                    scaleType="scale"                       
                    marginLeft="35px"/>                         
                <FlowLayout 
                    id="flowList"                        
                    width="match_parent"
                    marginTop="25px"
                    marginLeft="35px"                
                    layoutGravity="center_horizontal"/>  
            </LinearLayout>
     
            <LinearLayout        
                orientation="vertical"                        
                maxWidth="500px"                  
                width="match_parent">                     
                <LinearLayout           
                    id="deviceFoto"
                    orientation="vertical">                   
                    <TextView
                        id="deviceFotoReal"
                        iconWidth="130px"
                        iconHeight="120px"
                        marginTop="-40px"
                        width="500px"
                        height="120px"/>
                </LinearLayout>            
                <LinearLayout               
                    orientation="horizontal"
                    marginTop="20px">
                    <TextView                    
                        text="CÃ³digo :"
                        singleLine="true" 
                        textColor="#E8E88A"/>
                    <TextView                    
                        id="descCodigo"
                        singleLine="true"
                        marginLeft="15px"/>                               
                </LinearLayout>  
                <LinearLayout                               
                    orientation="horizontal"
                    marginTop="20px">   
                    <TextView                    
                        text="Ficha de datos :"
                        singleLine="true"                   
                        textColor="#A4FFFF"/> 
                    <TextView                    
                        text="Ficha de datos"
                        background="pages/detail_device/img/bg_ficha_datos.9.png"
                        singleLine="true"
                        marginLeft="50px"/>  
                    <ImageButton
                        width="25px"
                        height="25px"
                        src="pages/detail_device/img/ic_download.png"
                        marginLeft="160px"
                        onClick="onClickDownloadPdf"/>                 
                </LinearLayout> 
                <LinearLayout                
                    orientation="horizontal"
                    marginTop="30px">   
                    <WebView
                        id="viewYouIns"
                        width="280px"
                        height="220px"/>
                    <WebView
                        id="viewYouProm"
                        width="280px"
                        height="220px"                    
                        marginLeft="30px"/>           
                </LinearLayout> 
            </LinearLayout>                         
        </FlowLayout>  
    </ScrollView>                                    
</LinearLayout>
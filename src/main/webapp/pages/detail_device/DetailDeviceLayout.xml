<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout    
    width="match_parent"
    height="match_parent"
    orientation="vertical">
    <FrameLayout
        width="match_parent">
        <ImageButton
            width="70px"
            height="50px"
            src="pages/detail_device/img/ic_back.png"       
            marginTop="25px"
            onClick="onClickFinish"
            layoutGravity="right"/>
        <LinearLayout
            orientation="horizontal"
            width="match_parent"
            marginLeft="35px"
            marginTop="50px"
            layoutGravity="left">
            <ImageView
                id="deviceimg"
                width="90px"
                height="70px"/>
            <TextView
                id="descIcon"                                                          
                background="pages/detail_device/img/bg_title.9.png"
                singleLine="true"
                marginLeft="20px"/>
        </LinearLayout>
    </FrameLayout>
    <ScrollView 
        width="match_parent"
        height="match_parent"
        weight="1.0">
        <FlowLayout
            width="match_parent">
            <!-- Imagen de grande de una de las fotos de dispositivo -->
            <LinearLayout
                orientation="vertical"
                maxWidth="600px"
                width="match_parent">
                <ImageView
                    id="imgIcon"
                    marginTop="30px"
                    maxWidth="500px"
                    width="match_parent"
                    marginLeft="20px"
                    marginRight="20px"
                    height="400px"
                    scaleType="scale"
                    layoutGravity="center_horizontal"/>
                <FlowLayout
                    id="flowList"                        
                    width="400px"
                    marginTop="25px"
                    marginLeft="35px"
                    layoutGravity="center_horizontal"/>
            </LinearLayout>
     
            <!-- Detalles de ficha de -->
            <LinearLayout        
                orientation="vertical"
                maxWidth="600px"                  
                width="600px">
                <LinearLayout           
                    id="deviceFoto"
                    orientation="vertical">                   
                    <TextView
                        id="deviceFotoReal"
                        iconWidth="130px"
                        iconHeight="120px"
                        marginTop="-40px"
                        width="500px"
                        height="120px"/>
                </LinearLayout>            
                <LinearLayout               
                    orientation="horizontal"
                    marginTop="20px">
                    <TextView                    
                        text="CÃ³digo :"
                        singleLine="true" 
                        textColor="#E8E88A"/>
                    <TextView                    
                        id="descCodigo"
                        singleLine="true"
                        marginLeft="15px"/>                               
                </LinearLayout>  
                <LinearLayout                               
                    orientation="horizontal"
                    marginTop="20px">   
                    <TextView                    
                        text="Ficha de datos :"
                        singleLine="true"                   
                        textColor="#A4FFFF"/> 
                    <TextView                    
                        text="Ficha de datos"
                        background="pages/detail_device/img/bg_ficha_datos.9.png"
                        singleLine="true"
                        marginLeft="50px"/>  
                    <ImageButton
                        width="25px"
                        height="25px"
                        src="pages/detail_device/img/ic_download.png"
                        marginLeft="160px"
                        onClick="onClickDownloadPdf"/>                 
                </LinearLayout> 
                <LinearLayout                
                    orientation="horizontal"
                    marginTop="30px">   
                    <WebView
                        id="viewYouIns"
                        width="280px"
                        height="220px"/>
                    <WebView
                        id="viewYouProm"
                        width="280px"
                        height="220px"                    
                        marginLeft="30px"/>           
                </LinearLayout> 
            </LinearLayout>                         
        </FlowLayout>  
    </ScrollView>                                    
</LinearLayout>
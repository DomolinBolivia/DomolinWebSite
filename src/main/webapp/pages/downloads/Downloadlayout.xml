<?xml version="1.0" encoding="UTF-8"?>
<FrameLayout
    xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
    xsi:noNamespaceSchemaLocation='../../lib/layout-xml.xsd'
    width="match_parent"
    height="match_parent"
    background="#373435">
    <LinearLayout
        width="wrap_content"
        height="wrap_content"
        orientation="horizontal"
        margin="20px"
        layoutGravity="left|top">
        <ImageView
            height="90px"
            width="90px"
            src="assets/imgs/icon_medium.png"
        />
        <TextView
            text="Domolin"
            textColor="#E8E88A"
            textSize="50px"
            shadowColor="#E8E88A"
            shadowRadius="10"
            layoutGravity="bottom"
            />
    </LinearLayout>
    <LinearLayout
        width="wrap_content"
        height="wrap_content"
        orientation="horizontal"
        layoutGravity="right|top"
        marginTop="20px"
        marginRight="30px">
        <LinkButton
            text="Domótica e IOT"
            marginLeft="10px"
            marginRight="10px"
            onClick="onClickHome"
        />
        <LinkButton
            text="Productos"
            marginLeft="10px"
            marginRight="10px"
        />
        <LinkButton
            text="Descargas"
            marginLeft="10px"
            marginRight="10px"
            cssClassList="textSelected"
        />
        <LinkButton
            text="Acerca de Nosotros"
            marginLeft="10px"
            marginRight="10px"
        />
    </LinearLayout>
    <LinearLayout
        orientation="horizontal"
        layoutGravity="center">
        <LinearLayout
            orientation="vertical">
            <FrameLayout
                background="pages/downloads/imgs/bg_barra_descargar.png"
                paddingLeft="65px"
                paddingLight="120px"
                width="wrap_content"
                height="wrap_content"
                marginBottom="20px">
                <TextView
                    text="SmartHub App Windows"
                    textColor="#27EDEC"
                    textSize="14px"
                    singleLine="true"
                    padding="10px"
                />
            </FrameLayout>
            <LinearLayout
                orientation="vertical"
                background = "pages/downloads/imgs/bg_panel_app.9.png">
                <ImageView
                    src="pages/downloads/imgs/ic_icon_smart_hub.png"
                    width="150px"
                    height="150px"
                    margin="40px"
                    layoutGravity="center_horizontal"
                    />
                <RelativeLayout
                    marginLeft="20px"
                    marginRight="20px">
                    <ImageView
                        id="imgDownloadAppWindows"
                        src="pages/downloads/imgs/ic_windows.png"
                        width="80px"
                        height="70px"
                        />
                    <LinkButton
                        id="linkBtnVideoWindows"
                        text="Video de instalación"
                        toRightOf="imgDownloadAppWindows"
                        drawableLeft="assets/imgs/ic_youtube.png"
                        />
                    <LinkButton
                        text="Manual de usuario"
                        toRightOf="imgDownloadAppWindows"
                        below="linkBtnVideoWindows"
                        drawableLeft="assets/imgs/ic_manual.png"
                        />
                </RelativeLayout>
            </LinearLayout>
            <Button
                marginTop="20px"
                text="Descargar"
                layoutGravity="center_horizontal"
                drawableLeft="assets/imgs/ic_download.png"
                onClick="onClickDescargarWindows"/>
        </LinearLayout>
        <LinearLayout
            orientation="vertical">
            <FrameLayout
                background="pages/downloads/imgs/bg_barra_descargar.png"
                paddingLeft="65px"
                paddingLight="120px"
                width="wrap_content"
                height="wrap_content"
                marginBottom="20px">
                <TextView
                    text="SmartHub App Linux"
                    textColor="#27EDEC"
                    textSize="14px"
                    singleLine="true"
                    padding="10px"
                />
            </FrameLayout>
            <LinearLayout
                orientation="vertical"
                background = "pages/downloads/imgs/bg_panel_app.9.png">
                <ImageView
                    src="pages/downloads/imgs/ic_icon_smart_hub.png"
                    width="150px"
                    height="150px"
                    margin="40px"
                    layoutGravity="center_horizontal"
                    />
                <RelativeLayout
                    marginLeft="20px"
                    marginRight="20px">
                    <ImageView
                        id="imgDownloadAppWindows"
                        src="pages/downloads/imgs/ic_linux.png"
                        width="80px"
                        height="70px"
                        />
                    <LinkButton
                        id="linkBtnVideoWindows"
                        text="Video de instalación"
                        toRightOf="imgDownloadAppWindows"
                        drawableLeft="assets/imgs/ic_youtube.png"
                        />
                    <LinkButton
                        text="Manual de usuario"
                        toRightOf="imgDownloadAppWindows"
                        below="linkBtnVideoWindows"
                        drawableLeft="assets/imgs/ic_manual.png"
                        />
                </RelativeLayout>
            </LinearLayout>
            <Button
                marginTop="20px"
                text="Descargar"
                layoutGravity="center_horizontal"
                drawableLeft="assets/imgs/ic_download.png"
                onClick="onClickDescargarLinux"/>
        </LinearLayout>
        <LinearLayout
            orientation="vertical"
            marginLeft="30px">
            <TextView
                text="INFORMACIÓN"
                textColor="#27EDEC"
                marginBottom="30px"/>
            <TextView
                text="La aplicación SmartHub se instalara en su computadora 
local, necesaria para la conectividad con el servidor Domolin
para la interconectividad entre los dispositivos instalados en su hogar,
negocio u empresa. 
&#13;&#10;
&#13;&#10;
&#13;&#10;
&#xD;&#xA;
&#xD;&#xA;
&#xD;&#xA;
SmartHub se ejecutara en Background monitorizando eventos y acciones
a realizar entre los dispositivos."
                width="300px"/>
            <TextView
                text="CONSULTAR PRODUCTO"
                textColor="#27EDEC"
                singleLine="true"
                marginBottom="30px"
                marginTop="30px"/>
            <TextView
                text="79642513"
                singleLine="true"/>
        >

        </LinearLayout>
    </LinearLayout>
</FrameLayout>
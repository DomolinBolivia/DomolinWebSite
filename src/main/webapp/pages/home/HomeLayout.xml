<?xml version="1.0" encoding="UTF-8"?>
<FrameLayout
    xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
    xsi:noNamespaceSchemaLocation='../../lib/layout-xml.xsd'
    width="match_parent"
    height="match_parent"
    background="#373435">
    <LinearLayout
        width="wrap_content"
        height="wrap_content"
        orientation="horizontal"
        margin="20px"
        layoutGravity="left|top">
        <ImageView
            height="90px"
            width="90px"
            src="assets/imgs/icon_medium.png"/>
        <TextView
            text="Domolin"
            textColor="#E8E88A"
            textSize="50px"
            shadowColor="#E8E88A"
            shadowRadius="10"
            layoutGravity="bottom"/>
    </LinearLayout>
    <LinearLayout
        width="wrap_content"
        height="wrap_content"
        orientation="horizontal"
        layoutGravity="right|top"
        marginTop="20px"
        marginRight="30px">
        <LinkButton
            text="Domótica e IOT"
            marginLeft="10px"
            marginRight="10px"
            cssClassList="textSelected"/>
        <LinkButton
            text="Productos"
            marginLeft="10px"
            marginRight="10px"/>
        <LinkButton
            text="Descargas"
            marginLeft="10px"
            marginRight="10px"
            onClick="onClickDescargas"/>
        <LinkButton
            text="Acerca de Nosotros"
            marginLeft="10px"
            marginRight="10px"/>
    </LinearLayout>
    <LinearLayout
        width="wrap_content"
        height="wrap_content"
        layoutGravity="center"
        orientation="horizontal">
        <LinearLayout
            width="wrap_content"
            height="wrap_content"
            orientation="vertical">
            <ImageView
                src="pages/home/imgs/ic_servicios.png"
                width="460px"
                height="300px"
                layoutGravity="center_horizontal"/>
            <TextView
                text="Empresa dedicada al desarrollo venta y producción de herramientas de software y hardware para la autmatización artefactos digitales."
                textColor="#D2D3D5"
                marginTop="20px"
                width="460px"/>
        </LinearLayout>
        <LinearLayout
            orientation="vertical"
            marginLeft="50px">
            <LinearLayout
                orientation="horizontal">
                <ImageButton
                    src="assets/imgs/ic_back_photo.png"
                    width="20px"
                    height="60px"
                    marginRight="20px"
                    layoutGravity="center_vertical"
                    onClick="onClickAnteriorFoto"/>
                <FrameLayout
                    background="pages/home/imgs/bg_panel_photos.9.png">
                    <ImageView
                        id="imgFoto"
                        src="pages/home/photos/ic_photo_1.png"
                        width="450px"
                        height="330px"/>
                </FrameLayout>
                <ImageButton
                    src="assets/imgs/ic_next_photo.png"
                    width="20px"
                    height="60px"
                    marginRight="20px"
                    layoutGravity="center_vertical"
                    onClick="onClickSiguienteFoto"/>
            </LinearLayout>
            <LinearLayout
                orientation="horizontal"
                layoutGravity="center_horizontal">
                <FrameLayout
                    id="fraTextoFoto1"
                    alignParentLeft="30px"
                    alignParentRight="30px"
                    width="50px"
                    height="50px"
                    cssClassList="numeroSeleccionado">
                    <TextView
                        text="1"
                        textSize="20px"
                        textColor="#AFC0C8"
                        layoutGravity="center"/>
                </FrameLayout>
                <FrameLayout
                    id="fraTextoFoto2"
                    alignParentLeft="30px"
                    alignParentRight="30px"
                    width="50px"
                    height="50px">
                    <TextView
                        text="2"
                        textSize="20px"
                        textColor="#AFC0C8"
                        layoutGravity="center"/>
                </FrameLayout>
                <FrameLayout
                    id="fraTextoFoto3"
                    alignParentLeft="30px"
                    alignParentRight="30px"
                    width="50px"
                    height="50px">
                    <TextView
                        text="3"
                        textSize="20px"
                        textColor="#AFC0C8"
                        layoutGravity="center"/>
                </FrameLayout>
                <FrameLayout
                    id="fraTextoFoto4"
                    alignParentLeft="30px"
                    alignParentRight="30px"
                    width="50px"
                    height="50px">
                    <TextView
                        text="4"
                        textSize="20px"
                        textColor="#AFC0C8"
                        layoutGravity="center"/>
                </FrameLayout>
            </LinearLayout>
            <Button
                text="Prueba gratuita"
                layoutGravity="center_horizontal"
                marginTop="20px"
                onClick="onClickPausa"/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        width="match_parent"
        height="wrap_content"
        marginLeft="10px"
        marginRight="10px"
        marginBottom="50px"
        orientation="vertical"
        layoutGravity="bottom">
        <TextView
            textColor="#7CE7E9"
            text="Dispositivos destacados"
            textSize="25px"
            singleLine="true"/>
        <LinearLayout
            width="wrap_content"
            height="wrap_content"
            orientation="horizontal"
            layoutGravity="center_horizontal">
            <LinearLayout
                orientation="vertical"
                cssClassList="LinkButton"
                theme="LinkButton"
                marginLeft="30px"
                marginRight="30px">
                <ImageView
                    src="pages/home/imgs/ic_rgb.png"
                    width="100px"
                    height="100px"
                    layoutGravity="center_horizontal"/>
                <TextView
                    text="Interruptor RGB tactil"
                    layoutGravity="center_horizontal"/>
            </LinearLayout>
            <LinearLayout
                orientation="vertical"
                cssClassList="LinkButton"
                theme="LinkButton"
                marginLeft="30px"
                marginRight="30px">
                <ImageView
                    src="pages/home/imgs/ic_portero.png"
                    width="100px"
                    height="100px"
                    layoutGravity="center_horizontal"/>
                <TextView
                    text="Portero Eléctrico"
                    layoutGravity="center_horizontal"/>
            </LinearLayout>
            <LinearLayout
                orientation="vertical"
                cssClassList="LinkButton"
                theme="LinkButton"
                marginLeft="30px"
                marginRight="30px">
                <ImageView
                    src="pages/home/imgs/ic_camara_ip.png"
                    width="100px"
                    height="100px"
                    layoutGravity="center_horizontal"/>
                <TextView
                    text="Camara IP"
                    layoutGravity="center_horizontal"/>
            </LinearLayout>
            <LinearLayout
                orientation="vertical"
                cssClassList="LinkButton"
                theme="LinkButton"
                marginLeft="30px"
                marginRight="30px">
                <ImageView
                    src="pages/home/imgs/ic_rgb.png"
                    width="100px"
                    height="100px"
                    layoutGravity="center_horizontal"/>
                <TextView
                    text="Interruptor RGB tactil"
                    layoutGravity="center_horizontal"/>
            </LinearLayout>
            <LinearLayout
                orientation="vertical"
                cssClassList="LinkButton"
                theme="LinkButton"
                marginLeft="30px"
                marginRight="30px">
                <ImageView
                    src="pages/home/imgs/ic_portero.png"
                    width="100px"
                    height="100px"
                    layoutGravity="center_horizontal"/>
                <TextView
                    text="Interruptor RGB tactil"
                    layoutGravity="center_horizontal"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
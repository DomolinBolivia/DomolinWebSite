<?xml version="1.0" encoding="UTF-8"?>
<ScrollView
    xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
    xsi:noNamespaceSchemaLocation='../../lib/layout-xml.xsd'
    width="match_parent"
    height="match_parent"
    padding="10px">
    <LinearLayout
        orientation="vertical"
        width="match_parent">
        <!-- Menu de opciones-->
        <MenuLayout
            width="wrap_content"
            height="wrap_content"
            orientation="horizontal"
            layoutGravity="right"
            marginTop="10px"
            marginRight="30px">
            <LinkButton
                text="Domótica e IOT"
                marginLeft="10px"
                marginRight="10px"
                cssClassList="textSelected"
                onClick="onClickHome"/>
            <LinkButton
                text="Descargas"
                marginLeft="10px"
                marginRight="10px"
                onClick="onClickDescargas"/>
            <LinkButton
                text="Acerca de Nosotros"
                marginLeft="10px"
                marginRight="10px"
                onClick="onClickAcercaDe"/>
            <LinkButton
                text="Ingresar"
                marginLeft="10px"
                marginRight="10px"
                onClick="onClickLogin"/>
        </MenuLayout>
        <FlowLayout
            width="match_parent">
            <LinearLayout
                maxWidth="500px"
                marginTop="30px"
                width="wrap_content"
                height="wrap_content"
                orientation="vertical">
                <TextView
                    margin="20px"
                    drawableLeft="assets/imgs/icon_medium.png"
                    iconHeight="70px"
                    iconWidth="80px"
                    text="Domolin"
                    textColor="#E8E88A"
                    textSize="50px"
                    marginLeft="20px"
                    marginRight="20px"
                    shadowColor="#E8E88A"
                    shadowRadius="10"/>
                <ImageView
                    src="pages/home/imgs/ic_servicios.png"
                    maxWidth="460px"
                    width="match_parent"
                    scaleType="scale"
                    height="300px"/>
                <TextView
                    id="texto"
                    text="Empresa dedicada al desarrollo de herramientas hardware y software para la &lt;span style=&apos;color:#FD500C&apos;&gt;Domótica, Inmótica e IOT&lt;/span&gt; con &lt;span style=&apos;color:#FD500C&apos;&gt;Inteligencia Artifical&lt;/span&gt; para una mayor efectividad en el control de su empresa u hogar."
                    textColor="#D2D3D5"
                    marginTop="20px"
                    width="match_parent"
                    layoutGravity="center_horizontal"/>
            </LinearLayout>
            <!-- Banner -->
            <LinearLayout
                width="match_parent"
                maxWidth="600px"
                orientation="vertical"
                marginLeft="50px"
                marginTop="100px">
                <LinearLayout
                    orientation="horizontal"
                    width="match_parent"
                    layoutGravity="center_horizontal">
                    <ImageButton
                        src="assets/imgs/ic_back_photo.png"
                        width="25px"
                        height="70px"
                        marginRight="20px"
                        layoutGravity="center_vertical"
                        onClick="onClickAnteriorFoto"/>
                    <FrameLayout
                        width="match_parent"
                        weight="1.0"
                        background="pages/home/imgs/bg_panel_photos.9.png">
                        <ImageView
                            id="imgFoto"
                            scaleType="scale"
                            src="pages/home/photos/ic_photo_1.png"
                            width="match_parent"
                            height="330px"/>
                    </FrameLayout>
                    <ImageButton
                        src="assets/imgs/ic_next_photo.png"
                        width="25px"
                        height="70px"
                        marginRight="20px"
                        layoutGravity="center_vertical"
                        onClick="onClickSiguienteFoto"/>
                </LinearLayout>
                <LinearLayout
                    orientation="horizontal"
                    layoutGravity="center_horizontal">
                    <TextView
                        id="txtFoto1"
                        width="50px"
                        height="50px"
                        background="pages/home/imgs/bg_nro_img.png"
                        text="1"
                        textGravity="center"
                        textColor="#AFC0C8"/>
                    <TextView
                        id="txtFoto2"
                        width="50px"
                        height="50px"
                        text="2"
                        textGravity="center"
                        textColor="#AFC0C8"/>
                    <TextView
                        id="txtFoto3"
                        width="50px"
                        height="50px"
                        text="3"
                        textGravity="center"
                        textColor="#AFC0C8"/>
                    <TextView
                        id="txtFoto4"
                        width="50px"
                        height="50px"
                        text="4"
                        textGravity="center"
                        textColor="#AFC0C8"/>
                </LinearLayout>
                <Button
                    text="Prueba gratuita"
                    layoutGravity="center_horizontal"
                    marginTop="20px"
                    onClick="onClickPruebaGratuita"/>
            </LinearLayout>
        </FlowLayout>
        <LinearLayout
            width="match_parent"
            height="wrap_content"
            marginLeft="10px"
            marginRight="10px"
            marginBottom="10px"
            orientation="vertical">
            <TextView
                textColor="#7CE7E9"
                text="Dispositivos destacados"
                textSize="20px"
                singleLine="true"/>
            <FlowLayout
                id="flowDevices"
                marginTop="10px"
                marginLeft="100px"
                marginRight="100px"
                alignment="left"
                width="match_parent"
                height="wrap_content">
            </FlowLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>
<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout
    xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
    xsi:noNamespaceSchemaLocation='../../lib/layout-xml.xsd'
    layout_width="match_parent"
    layout_height="match_parent"
    background="#373435"
    orientation="vertical">
    <FrameLayout
        layout_width="match_parent"
        layout_height="wrap_content">
        <LinearLayout
            layout_width="wrap_content"
            layout_height="wrap_content"
            orientation="horizontal"
            layout_margin="20px"
            layout_gravity="left|top">
            <ImageView
                layout_height="90px"
                layout_width="90px"
                src="pages/home/icon_medium.png"
            />
            <TextView
                text="Domolin"
                textColor="#E8E88A"
                textSize="50px"
                shadowColor="#E8E88A"
                shadowRadius="10"
                layout_gravity="bottom"
                />
        </LinearLayout>
    </FrameLayout>
</LinearLayout>
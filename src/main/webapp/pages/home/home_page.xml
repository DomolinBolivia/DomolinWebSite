<?xml version="1.0" encoding="UTF-8"?>
<FrameLayout
    xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
    xsi:noNamespaceSchemaLocation='../../lib/layout-xml.xsd'
    layout_width="match_parent"
    layout_height="match_parent"
    background="#373435">
    <LinearLayout
        layout_width="wrap_content"
        layout_height="wrap_content"
        orientation="horizontal"
        layout_margin="20px"
        layout_gravity="left|top">
        <ImageView
            layout_height="90px"
            layout_width="90px"
            src="assets/imgs/icon_medium.png"
        />
        <TextView
            text="Domolin"
            textColor="#E8E88A"
            textSize="50px"
            shadowColor="#E8E88A"
            shadowRadius="10"
            layout_gravity="bottom"
            />
    </LinearLayout>
    <LinearLayout
        layout_width="wrap_content"
        layout_height="wrap_content"
        orientation="horizontal"
        layout_gravity="right|top"
        layout_marginTop="20px"
        layout_marginRight="30px">
        <LinkButton
            text="Domótica e IOT"
            layout_marginLeft="10px"
            layout_marginRight="10px"
            cssClassList="textSelected"
        />
        <LinkButton
            text="Productos"
            layout_marginLeft="10px"
            layout_marginRight="10px"
        />
        <LinkButton
            text="Descargas"
            layout_marginLeft="10px"
            layout_marginRight="10px"
            onClick="onClickDescargas"
        />
        <LinkButton
            text="Acerca de Nosotros"
            layout_marginLeft="10px"
            layout_marginRight="10px"
        />
    </LinearLayout>
    <LinearLayout
        layout_width="wrap_content"
        layout_height="wrap_content"
        layout_gravity="center"
        orientation="horizontal">
        <LinearLayout
            layout_width="wrap_content"
            layout_height="wrap_content"
            orientation="vertical">
            <ImageView
                src="pages/home/imgs/ic_servicios.png"
                layout_width="460px"
                layout_height="300px"
                layout_gravity="center_horizontal"
            />
            <TextView
                text="Empresa dedicada al desarrollo venta y producción de herramientas de software y hardware para la autmatización artefactos digitales."
                textColor="#D2D3D5"
                layout_marginTop="20px"
                layout_width="460px"
            />
        </LinearLayout>
        <LinearLayout
            orientation="vertical"
            layout_marginLeft="50px">
            <LinearLayout
                orientation="horizontal">
                <ImageButton
                    src="assets/imgs/ic_back_photo.png"
                    layout_width="20px"
                    layout_height="60px"
                    layout_marginRight="20px"
                    layout_gravity="center_vertical"
                    onClick="onClickAnteriorFoto"
                />
                <FrameLayout
                    background="pages/home/imgs/bg_panel_photos.9.png">
                    <ImageView
                        id="imgFoto"
                        src="pages/home/photos/ic_photo_1.png"
                        layout_width="450px"
                        layout_height="330px"
                    />
                </FrameLayout>
                <ImageButton
                    src="assets/imgs/ic_next_photo.png"
                    layout_width="20px"
                    layout_height="60px"
                    layout_marginRight="20px"
                    layout_gravity="center_vertical"
                    onClick="onClickSiguienteFoto"
                />
            </LinearLayout>
            <LinearLayout
                orientation="horizontal"
                layout_gravity="center_horizontal">
                <FrameLayout
                    id="fraTextoFoto1"
                    layout_alignParentLeft="30px"
                    layout_alignParentRight="30px"
                    layout_width="50px"
                    layout_height="50px"
                    cssClassList="numeroSeleccionado">
                    <TextView
                        text="1"
                        textSize="20px"
                        textColor="#AFC0C8"
                        layout_gravity="center"
                    />
                </FrameLayout>
                <FrameLayout
                    id="fraTextoFoto2"
                    layout_alignParentLeft="30px"
                    layout_alignParentRight="30px"
                    layout_width="50px"
                    layout_height="50px">
                    <TextView
                        text="2"
                        textSize="20px"
                        textColor="#AFC0C8"
                        layout_gravity="center"
                    />
                </FrameLayout>
                <FrameLayout
                    id="fraTextoFoto3"
                    layout_alignParentLeft="30px"
                    layout_alignParentRight="30px"
                    layout_width="50px"
                    layout_height="50px">
                    <TextView
                        text="3"
                        textSize="20px"
                        textColor="#AFC0C8"
                        layout_gravity="center"
                    />
                </FrameLayout>
                <FrameLayout
                    id="fraTextoFoto4"
                    layout_alignParentLeft="30px"
                    layout_alignParentRight="30px"
                    layout_width="50px"
                    layout_height="50px">
                    <TextView
                        text="4"
                        textSize="20px"
                        textColor="#AFC0C8"
                        layout_gravity="center"
                    />
                </FrameLayout>
            </LinearLayout>
            <Button
                text="Prueba gratuita"
                layout_gravity="center_horizontal"
                layout_marginTop="20px"
                onClick="onClickPausa"
            />
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        layout_width="match_parent"
        layout_height="wrap_content"
        layout_marginLeft="10px"
        layout_marginRight="10px"
        layout_marginBottom="50px"
        orientation="vertical"
        layout_gravity="bottom">
        <TextView
            textColor="#7CE7E9"
            text="Dispositivos destacados"
            textSize="25px"
            singleLine="true"
            />
        <LinearLayout
            layout_width="wrap_content"
            layout_height="wrap_content"
            orientation="horizontal"
            layout_gravity="center_horizontal">
            <LinearLayout
                orientation="vertical"
                cssClassList="Button"
                layout_marginLeft="30px"
                layout_marginRight="30px">
                <ImageView
                    src="pages/home/imgs/ic_rgb.png"
                    layout_width="100px"
                    layout_height="100px"
                    layout_gravity="center_horizontal"
                />
                <TextView
                    text="Interruptor RGB tactil"
                    layout_gravity="center_horizontal"
                />
            </LinearLayout>
            <LinearLayout
                orientation="vertical"
                cssClassList="Button"
                layout_marginLeft="30px"
                layout_marginRight="30px">
                <ImageView
                    src="pages/home/imgs/ic_portero.png"
                    layout_width="100px"
                    layout_height="100px"
                    layout_gravity="center_horizontal"
                />
                <TextView
                    text="Portero Eléctrico"
                    layout_gravity="center_horizontal"
                />
            </LinearLayout>
            <LinearLayout
                orientation="vertical"
                cssClassList="Button"
                layout_marginLeft="30px"
                layout_marginRight="30px">
                <ImageView
                    src="pages/home/imgs/ic_camara_ip.png"
                    layout_width="100px"
                    layout_height="100px"
                    layout_gravity="center_horizontal"
                />
                <TextView
                    text="Camara IP"
                    layout_gravity="center_horizontal"
                />
            </LinearLayout>
            <LinearLayout
                orientation="vertical"
                cssClassList="Button"
                layout_marginLeft="30px"
                layout_marginRight="30px">
                <ImageView
                    src="pages/home/imgs/ic_rgb.png"
                    layout_width="100px"
                    layout_height="100px"
                    layout_gravity="center_horizontal"
                />
                <TextView
                    text="Interruptor RGB tactil"
                    layout_gravity="center_horizontal"
                />
            </LinearLayout>
            <LinearLayout
                orientation="vertical"
                cssClassList="Button"
                layout_marginLeft="30px"
                layout_marginRight="30px">
                <ImageView
                    src="pages/home/imgs/ic_portero.png"
                    layout_width="100px"
                    layout_height="100px"
                    layout_gravity="center_horizontal"
                />
                <TextView
                    text="Interruptor RGB tactil"
                    layout_gravity="center_horizontal"
                />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</FrameLayout>
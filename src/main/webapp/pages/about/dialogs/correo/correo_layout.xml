<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout
    width="700px"
    height="wrap_content"
    orientation="vertical"    
    background="lib/imgs/bg_dialog.9.png">
    <TextView
        singleLine="true"
        text="Enviar Correo ElectrÃ³nico de consulta"
        drawableLeft="pages/about/dialogs/send_mail/ic_mail.png"
        iconWidth="70px"
        iconHeight="30px"
        marginBottom="20px"/>
    <TextView    
        text="Dato de Contacto"
        singleLine="true"
        textColor="{{Colors.HEADER}}"
        marginBottom="10px"/>
    <TextView
        drawableLeft="pages/about/dialogs/send_mail/ic_info.png"
        iconWidth="55px"
        iconHeight="40px"
        width="match_parent"
        textColor="#E8E88A"                             
        text="Los datos de contacto, seran unicamente para responder sus consultas, DOMOLIN no usara sus datos para otros fines."/>
    <LinearLayout
        orientation="horizontal"
        width="match_parent"
        marginLeft="100px">
        <TextView
            singleLine="true"
            width="200px"
            text="Correo Electronico (*)"/>
        <EditText 
            id="textEmail"
            inputType="textEmail"        
            singleLine="true"
            width="290px"/> 
    </LinearLayout>    
    <LinearLayout     
        orientation="horizontal"
        width="match_parent"
        marginLeft="100px"
        marginTop="10px">
        <TextView
            singleLine="true"
            text="Nro Celular"
            width="200px"/>    
        <EditText
            id="textPhone"                
            inputType="textPhone"
            singleLine="true"
            width="290px"/>
    </LinearLayout>
    <TextView
        singleLine="true"
        text="Mensaje"
        textColor="{{Colors.HEADER}}"/>
    <LinearLayout     
        orientation="horizontal"
        width="match_parent"
        marginLeft="100px">
        <TextView
            singleLine="true"
            text="Detalle su &lt;/br&gt; inquietud (*)"
            width="200px"/>
        <EditText
            id="textDetail"                
            inputType="textDetalle"
            width="290px"
            height="150px"/>
    </LinearLayout>
    <LinearLayout
        orientation="horizontal"> 
        <TextView
            singleLine="true"
            text="Adjuntos" 
            textColor="{{Colors.HEADER}}"/>
        <ImageButton
            width="25px"
            height="25px"
            src="pages/about/dialogs/send_mail/ic_attch_file.png"
            onClick="onClickSubmitFile"/>  
    </LinearLayout>
    <FlowLayout 
        id="linAdjuntos"
        alignment="left"
        width="match_parent">
    </FlowLayout>
    <LinearLayout
        orientation="horizontal"
        layoutGravity="right"> 
        <Button 
            text="Cancelar"
            marginLeft="450px"
            onClick="onClickClose"/>
        <Button 
            id="botton"
            text="Enviar"
            onClick="onClickSendData"      
            marginLeft="40px"/>
    </LinearLayout> 
</LinearLayout>
<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout
    width="800px"
    height="700px"
    orientation="vertical"    
    padding="40px"
    background="lib/imgs/bg_dialog.9.png">
    <TextView
        singleLine="true"
        text="Enviar Correo ElectrÃ³nico de consulta"
        drawableLeft="pages/about/dialogs/send_mail/ic_mail.png"
        iconWidth="70px"
        iconHeight="30px"
        textSize="20px" 
        marginBottom="10px"
        marginTop="20px"/>   
    <TextView    
        text="Dato de Contacto"
        singleLine="true"
        textColor="{{Colors.HEADER}}"
        marginBottom="10px"
        marginTop="20px"
        marginLeft="20px"/>
    <TextView
        drawableLeft="pages/about/dialogs/send_mail/ic_info.png"
        iconWidth="55px"
        iconHeight="35px"
        width="match_parent"  
        textColor="#E8E88A"                             
        text="Los datos de contacto, seran unicamente para responder sus consultas, DOMOLIN no usara sus datos para otros fines."
        marginLeft="20px"/>      
    <LinearLayout     
        orientation="horizontal"
        width="match_parent"> 
        <TextView
            singleLine="true"
            text="Correo Electronico (*)"
            marginLeft="100px"
            marginBottom="20px"
            marginTop="20px"/>
        <EditText 
            id="textEmail"               
            inputType="textEmail"        
            singleLine="true" 
            width="375px"
            marginLeft="50px"
            marginBottom="20px"
            marginTop="20px"/> 
    </LinearLayout>    
    <LinearLayout     
        orientation="horizontal"
        width="match_parent"> 
        <TextView
            singleLine="true"
            text="Nro Celular"
            marginLeft="100px"/>    
        <EditText
            id="textPhone"                
            inputType="textPhone"        
            width="375px"
            singleLine="true"
            ems="12"
            marginLeft="140px"
            marginBottom="20px"/>
    </LinearLayout>
    <LinearLayout     
        orientation="vertical"
        width="match_parent">  
        <TextView
            singleLine="true"
            text="Mensaje"
            marginLeft="20px" 
            textColor="{{Colors.HEADER}}"/>
    </LinearLayout> 
    <LinearLayout     
        orientation="horizontal"
        width="match_parent"> 
        <TextView
            singleLine="true"
            text="Detalle su &lt;/br&gt; inquietud (*)"
            marginLeft="100px"/>    
        <EditText
            id="textDetail"                
            inputType="textDetalle"
            width="375px"
            height="150px"
            marginLeft="140px"/>   
    </LinearLayout>      
    <LinearLayout     
        orientation="horizontal"
        width="match_parent"> 
        <TextView
            singleLine="true"
            text="Adjuntos" 
            textColor="{{Colors.HEADER}}"           
            marginLeft="20px" />
        <ImageButton
            width="25px"
            height="25px"
            src="pages/about/dialogs/send_mail/ic_attch_file.png"
            onClick="onClickSubmitFile"/>  
    </LinearLayout>
    <LinearLayout 
        id="linAdjuntos"    
        orientation="horizontal"
        width="match_parent">                   
    </LinearLayout> 
    <LinearLayout     
        orientation="horizontal"
        width="match_parent"> 
        <Button 
            text="Cancelar"            
            marginLeft="450px"
            onClick="onClickClose"/>
        <Button 
            id="botton"
            text="Enviar"      
            onClick="onClickSendData"      
            marginLeft="40px"
        />    
    </LinearLayout> 
</LinearLayout>
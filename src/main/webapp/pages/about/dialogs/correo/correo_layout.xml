<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout
    width="match_parent"
    maxWidth="700px"
    marginLeft="5%"
    marginRight="5%"
    orientation="vertical"    
    background="lib/imgs/bg_dialog.9.png">
    <TextView
        width="match_parent"
        text="Enviar Correo ElectrÃ³nico de consulta"
        drawableLeft="pages/about/dialogs/send_mail/ic_mail.png"
        iconWidth="70px"
        iconHeight="30px"
        marginBottom="20px"/>
    <TextView
        text="Dato de Contacto"
        singleLine="true"
        textColor="{{Colors.HEADER}}"
        marginBottom="10px"/>
    <TextView
        width="match_parent"
        drawableLeft="pages/about/dialogs/send_mail/ic_info.png"
        iconWidth="55px"
        iconHeight="40px"
        textColor="#E8E88A"                             
        text="Los datos de contacto, seran unicamente para responder sus consultas, DOMOLIN no usara sus datos para otros fines."/>
    <FlowLayout
        width="match_parent"
        marginLeft="40px"
        marginTop="10px"
        alignment="left">
        <TextView
            singleLine="true"
            width="200px"
            text="Correo Electronico (*)"/>
        <EditText 
            id="textEmail"
            inputType="textEmail"        
            singleLine="true"
            width="250px"/>
    </FlowLayout>    
    <FlowLayout
        width="match_parent"
        marginLeft="40px"
        marginTop="10px"
        alignment="left">
        <TextView
            singleLine="true"
            text="Nro Celular"
            width="200px"/>    
        <EditText
            id="textPhone"                
            inputType="textPhone"
            singleLine="true"
            width="250px"/>
    </FlowLayout>
    <TextView
        marginTop="10px"
        singleLine="true"
        text="Mensaje"
        textColor="{{Colors.HEADER}}"
        marginBottom="10px"/>
    <FlowLayout     
        width="match_parent"
        marginLeft="40px"
        alignment="left">
        <TextView
            text="Detalle su inquietud (*)"
            width="200px"/>
        <EditText
            id="textDetail"
            inputType="textDetalle"
            width="250px"
            height="150px"/>
    </FlowLayout>
    <LinearLayout
        orientation="horizontal"> 
        <TextView
            singleLine="true"
            text="Adjuntos" 
            textColor="{{Colors.HEADER}}"/>
        <ImageButton
            width="25px"
            height="25px"
            src="pages/about/dialogs/send_mail/ic_attch_file.png"
            onClick="onClickSubmitFile"/>  
    </LinearLayout>
    <FlowLayout 
        id="linAdjuntos"
        alignment="left"
        width="match_parent">
    </FlowLayout>
    <LinearLayout
        orientation="horizontal"
        layoutGravity="right"> 
        <Button 
            id="botton"
            text="Enviar"
            onClick="onClickSendData"/>
        <Button
            marginLeft="30px"
            text="Cancelar"
            onClick="onClickClose"/>
    </LinearLayout> 
</LinearLayout>
<?xml version="1.0" encoding="UTF-8"?>
<FrameLayout
    xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
    xsi:noNamespaceSchemaLocation='../../lib/layout-xml.xsd'
    width="match_parent"
    height="match_parent">
    <LinearLayout
        orientation="vertical"
        width="match_parent"
        height="match_parent">
        <!-- LOGO -->
        <LinearLayout
            orientation="vertical"
            margin="20px">
            <LinearLayout
                orientation="horizontal">
                <ImageView
                    height="70px"
                    width="70px"
                    src="assets/imgs/icon_medium.png"/>
                <TextView
                    text="Domolin"
                    textColor="#E8E88A"
                    textSize="50px"
                    shadowColor="#E8E88A"
                    shadowRadius="10"
                    layoutGravity="bottom"/>
            </LinearLayout>
            <TextView
                text="Automatización, control, confort y seguridad para tu hogar o industria."
                singleLine="true"
                textColor="#B7E4B5"/>
        </LinearLayout>
        <LinearLayout
            orientation="horizontal"
            width="match_parent"
            height="match_parent"
            weight="1">
            <LinearLayout
                width="match_parent"
                height="match_parent"
                orientation="horizontal">
                <FrameLayout
                    weight="0.5"
                    width="match_parent"
                    height="match_parent">
                    <FrameLayout
                        padding="20px"
                        width="match_parent"
                        layoutGravity="center">
                        <ImageView
                            width="match_parent"
                            height="350px"
                            src="pages/about/photos/ic_photo_1.png"/>
                        <LinearLayout
                            width="match_parent"
                            orientation="vertical"
                            padding="10px"
                            layoutGravity="bottom"
                            background="rgba(55, 52, 53, 0.5)">
                            <LinearLayout
                                orientation="horizontal">
                                <FrameLayout
                                    id="fraTextoFoto1"
                                    marginLeft="3px"
                                    marginRight="3px"
                                    width="30px"
                                    height="30px"
                                    cssClassList="numeroSeleccionado">
                                    <TextView
                                        text="1"
                                        textSize="12px"
                                        textColor="#AFC0C8"
                                        layoutGravity="center"/>
                                </FrameLayout>
                                <FrameLayout
                                    id="fraTextoFoto2"
                                    marginLeft="3px"
                                    marginRight="3px"
                                    width="30px"
                                    height="30px">
                                    <TextView
                                        text="2"
                                        textSize="12px"
                                        textColor="#AFC0C8"
                                        layoutGravity="center"/>
                                </FrameLayout>
                                <FrameLayout
                                    id="fraTextoFoto3"
                                    marginLeft="3px"
                                    marginRight="3px"
                                    width="30px"
                                    height="30px">
                                    <TextView
                                        text="3"
                                        textSize="12px"
                                        textColor="#AFC0C8"
                                        layoutGravity="center"/>
                                </FrameLayout>
                                <FrameLayout
                                    id="fraTextoFoto4"
                                    marginLeft="3px"
                                    marginRight="3px"
                                    width="30px"
                                    height="30px">
                                    <TextView
                                        text="4"
                                        textSize="12px"
                                        textColor="#AFC0C8"
                                        layoutGravity="center"/>
                                </FrameLayout>
                            </LinearLayout>
                            <TextView
                                marginTop="10px"
                                width="match_parent"
                                text="Desarro de nuestro propios dispositivos y a requerimiento de los usuarios."/>
                        </LinearLayout>
                    </FrameLayout>
                </FrameLayout>
                <LinearLayout
                    weight="0.5"
                    orientation="vertical"
                    width="match_parent"
                    padding="10px">
                    <TextView
                        text="Información de Contacto"
                        width="match_parent"
                        marginBottom="20px"
                        textColor="{{Colors.HEADER}}"/>
                    <LinkButton
                        drawableLeft="pages/about/imgs/ic_location.png"
                        width="match_parent"
                        text="La Paz - Bolivia Final Bajo seguencoma, Calle Miranda Nro 630"
                        iconWidth="20px"
                        iconHeight="20px"/>
                    <LinkButton
                        drawableLeft="pages/about/imgs/ic_send_mail.png"
                        text="domolinBolivia@gmail.com"
                        iconWidth="20px"
                        iconHeight="20px"/>
                    <LinkButton
                        drawableLeft="pages/about/imgs/ic_contact.png"
                        width="match_parent"
                        text="+591 79642513"
                        iconWidth="20px"
                        iconHeight="20px"/>
                    <TextView
                        text="Objetivo"
                        singleLine="true"
                        marginBottom="20px"
                        marginTop="20px"
                        textColor="{{Colors.HEADER}}"/>
                    <TextView
                        width="match_parent"
                        text="Desarrollar productos de Hardware y Software que ayuden a  mejorar la calidad de vida y seguridad para las empresas, hogares y personas. &lt;/br&gt;&lt;/br&gt;Interconectar nuestros productos y brindar un mejor servicio a la facilidad de un solo portal de control"/>
                    <TextView
                        text="Misión"
                        singleLine="true"
                        marginBottom="20px"
                        marginTop="20px"
                        textColor="{{Colors.HEADER}}"/>
                    <TextView
                        width="match_parent"
                        text="Ofrecer a nuestros clientes los mejores servicios de: seguridad, control y monitoréo mediante IOT"/>
                    
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <FrameLayout
            width="match_parent"
            background="rgba(42, 70, 88, 0.3)">
            <LinearLayout
                orientation="vertical"
                layoutGravity="center_horizontal">
                <LinearLayout
                    orientation="horizontal"
                    layoutGravity="center_horizontal">
                    <ImageButton
                        width="30px"
                        height="30px"
                        src="pages/about/imgs/ic_whatsapp.png"
                        onClick="onClickWhatSapp"/>
                    <ImageButton
                        marginLeft="10px"
                        width="30px"
                        height="30px"
                        src="pages/about/imgs/ic_twitter.png"
                        onClick="onClickTwitter"/>
                    <ImageButton
                        marginLeft="10px"
                        width="30px"
                        height="30px"
                        src="pages/about/imgs/ic_facebook.png"
                        onClick="onClickFacebook"/>
                    <ImageButton
                        marginLeft="10px"
                        width="30px"
                        height="30px"
                        src="pages/about/imgs/ic_tictoc.png"
                        onClick="onClickTicToc"/>
                    <ImageButton
                        marginLeft="10px"
                        width="30px"
                        height="30px"
                        src="pages/about/imgs/ic_instagram.png"
                        onClick="onClickInstagram"/>
                    <ImageButton
                        marginLeft="10px"
                        width="30px"
                        height="30px"
                        src="pages/about/imgs/ic_youtbe.png"
                        onClick="onClickYotube"/>
                </LinearLayout>
                <TextView
                    marginTop="10px"
                    layoutGravity="center_horizontal"
                    text="Todos los derechos 2021 Domolin"
                    singleLine="true"/>
            </LinearLayout>
        </FrameLayout>
    </LinearLayout>
    <!-- MENU -->
    <LinearLayout
        width="wrap_content"
        height="wrap_content"
        orientation="horizontal"
        layoutGravity="right|top"
        marginTop="20px"
        marginRight="30px">
        <LinkButton
            text="Domótica e IOT"
            marginLeft="10px"
            marginRight="10px"
            cssClassList="textSelected"
            onClick="onClickHome"/>
        <LinkButton
            text="Descargas"
            marginLeft="10px"
            marginRight="10px"
            onClick="onClickDescargas"/>
        <LinkButton
            text="Acerca de Nosotros"
            marginLeft="10px"
            marginRight="10px"
            onClick="onClickAcercaDe"/>
        <LinkButton
            text="Ingresar"
            marginLeft="10px"
            marginRight="10px"
            onClick="onClickLogin"/>
    </LinearLayout>
</FrameLayout>
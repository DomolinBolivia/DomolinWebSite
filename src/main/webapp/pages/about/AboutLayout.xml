<?xml version="1.0" encoding="UTF-8"?>
<LinearLayout
    xmlns:xsi='http://www.w3.org/2001/XMLSchema-instance'
    xsi:noNamespaceSchemaLocation='../../lib/layout-xml.xsd'
    width="match_parent"
    height="match_parent"
    orientation="vertical">
    <LinearLayout
        orientation="vertical"
        width="match_parent">
        <!-- Menu de opciones-->
        <MenuLayout
            width="wrap_content"
            height="wrap_content"
            orientation="horizontal"
            layoutGravity="right"
            marginTop="10px"
            marginRight="30px">
            <LinkButton
                text="Domótica e IOT"
                marginLeft="10px"
                marginRight="10px"
                cssClassList="textSelected"
                onClick="onClickHome"/>
            <LinkButton
                text="Descargas"
                marginLeft="10px"
                marginRight="10px"
                onClick="onClickDescargas"/>
            <LinkButton
                text="Acerca de Nosotros"
                marginLeft="10px"
                marginRight="10px"
                onClick="onClickAcercaDe"/>
            <LinkButton
                text="Ingresar"
                marginLeft="10px"
                marginRight="10px"
                onClick="onClickLogin"/>
        </MenuLayout>
        <!-- Logo Domolin-->
        <TextView
            margin="20px"
            drawableLeft="assets/imgs/icon_medium.png"
            iconHeight="70px"
            iconWidth="80px"
            text="Domolin"
            textColor="#E8E88A"
            textSize="50px"
            shadowColor="#E8E88A"
            shadowRadius="10"/>
    </LinearLayout>
    <ScrollView
        width="match_parent"
        height="match_parent"
        weight="1.0">
        <FlowLayout
            width="match_parent">
            <!-- Fotos de Domolin -->
            <FrameLayout
                width="400px"
                height="350px"
                marginLeft="30px"
                marginRight="30px">
                <ImageView
                    width="match_parent"
                    height="match_parent"
                    src="pages/about/photos/ic_photo_1.png"/>
                <TextView
                    width="match_parent"
                    padding="10px"
                    layoutGravity="bottom"
                    background="rgba(55, 52, 53, 0.5)"
                    text="Desarro de nuestro propios dispositivos y a requerimiento de los usuarios."/>
            </FrameLayout>
            <!-- Informacion -->
            <LinearLayout
                width="match_parent"
                maxWidth="550px"
                orientation="vertical"
                padding="10px">
                <TextView
                    text="Información de Contacto"
                    singleLine="true"
                    marginBottom="20px"
                    textColor="{{Colors.HEADER}}"/>
                <LinkButton
                    width="match_parent"
                    drawableLeft="pages/about/imgs/ic_location.png"
                    text="La Paz - Bolivia Final Bajo seguencoma,&lt;br&gt;Calle Miranda Nro 630"
                    iconWidth="20px"
                    iconHeight="20px"
                    onClick="onClickUbicacion"/>
                <LinkButton
                    drawableLeft="pages/about/imgs/ic_send_mail.png"
                    text="contacto@domolin.com"
                    iconWidth="20px"
                    iconHeight="20px"
                    onClick="onClickMail"/>
                <LinkButton
                    drawableLeft="pages/about/imgs/ic_contact.png"
                    singleLine="true"
                    text="+591 79642513"
                    iconWidth="20px"
                    iconHeight="20px"
                    onClick="onClickWhatSapp"/>
                <TextView
                    text="Objetivo"
                    singleLine="true"
                    marginBottom="20px"
                    marginTop="20px"
                    textColor="{{Colors.HEADER}}"/>
                <TextView
                    width="match_parent"
                    text="Desarrollar productos de Hardware y Software que ayuden a  mejorar la calidad de vida y seguridad para las empresas, hogares y personas. &lt;/br&gt;&lt;/br&gt;Interconectar nuestros productos y brindar un mejor servicio a la facilidad de un solo portal de control"/>
                <TextView
                    text="Misión"
                    singleLine="true"
                    marginBottom="20px"
                    marginTop="20px"
                    textColor="{{Colors.HEADER}}"/>
                <TextView
                    width="match_parent"
                    text="Ofrecer a nuestros clientes los mejores servicios de: seguridad, control y monitoréo mediante IOT"/>
            </LinearLayout>
        </FlowLayout>
    </ScrollView>
    <!-- Datos de contacto (Barra Inferior)-->
    <FrameLayout
        width="match_parent"
        background="rgba(42, 70, 88, 0.3)">
        <LinearLayout
            orientation="vertical"
            layoutGravity="center_horizontal"
            marginTop="10px"
            marginBottom="10px">
            <LinearLayout
                orientation="horizontal"
                layoutGravity="center_horizontal">
                <ImageButton
                    width="30px"
                    height="30px"
                    src="pages/about/imgs/ic_whatsapp.png"
                    onClick="onClickWhatSapp"/>
                <ImageButton
                    marginLeft="10px"
                    width="30px"
                    height="30px"
                    src="pages/about/imgs/ic_twitter.png"
                    onClick="onClickTwitter"/>
                <ImageButton
                    marginLeft="10px"
                    width="30px"
                    height="30px"
                    src="pages/about/imgs/ic_facebook.png"
                    onClick="onClickFacebook"/>                                
                <ImageButton
                    marginLeft="10px"
                    width="30px"
                    height="30px"
                    src="pages/about/imgs/ic_youtbe.png"
                    onClick="onClickYotube"/>
            </LinearLayout>
            <TextView
                marginTop="10px"
                layoutGravity="center_horizontal"
                text="Todos los derechos 2021 Domolin"
                singleLine="true"/>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>